{
  "manifest_version": 2,

  "name": "StrapHanger Plugin",
  "description": "This extension allows you to skim articles",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
   },

  "page_action": {
   "default_icon": "icon.png",
   "default_title": "Skim it!"
  },

  "permissions": [
   "declarativeContent",
   "activeTab"
   ]
}
